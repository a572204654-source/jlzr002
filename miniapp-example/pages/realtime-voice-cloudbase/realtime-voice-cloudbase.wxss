.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 20rpx 0;
  background-color: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.status {
  margin-top: 15rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.status.connected {
  color: #07c160;
}

.status.disconnected {
  color: #fa5151;
}

/* 统计信息 */
.stats {
  display: flex;
  justify-content: space-around;
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 识别结果 */
.result-container {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  min-height: 300rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.result-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  padding: 5rpx 20rpx;
  font-size: 24rpx;
}

.result-content {
  min-height: 200rpx;
  line-height: 1.8;
}

.result-text {
  font-size: 30rpx;
  color: #333;
}

.result-placeholder {
  font-size: 28rpx;
  color: #999;
}

.current-text {
  margin-top: 20rpx;
  padding: 15rpx;
  background-color: #f0f9ff;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #2979ff;
}

.current-label {
  font-weight: bold;
  margin-right: 10rpx;
}

/* 录音按钮 */
.record-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.status-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.record-btn {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.record-btn.recording {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  transform: scale(1.1);
  box-shadow: 0 12rpx 30rpx rgba(245, 87, 108, 0.4);
}

/* 操作按钮 */
.action-bar {
  padding: 20rpx 0;
}

.action-button {
  width: 100%;
  background-color: #07c160;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  padding: 25rpx 0;
}

/* 历史记录 */
.history-container {
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.history-header {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.history-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.history-delete {
  padding: 5rpx 15rpx;
  font-size: 24rpx;
  background-color: #fa5151;
  color: white;
}

